<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<% @posts.each do |post| %>
  <div class="article">
    <div class="text">
      <h2><%= post.title %></h2> <br />
      <h4><%= post.body %></h4>
    </div>
    <span><%= link_to downvote_path(post), method: :patch, remote: true, class: "vote-change" do%><img src="/assets/downvote.png" style="width: 50px;"><% end %></span>
    <div id="bar_<%= post.id %>" class="bar">
      <div class="percent" style="width: <% if post.percentage == nil || post.percentage == 0%><%= 0 %><%else%><%= post.percentage * 100 %><%end%>% ;"></div>
    </div>
    <span><%= link_to upvote_path(post), method: :patch, remote: true, class: "vote-change" do%><img src="/assets/upvote.png" style="width: 50px;"><% end %></span>
  </div>
<% end %>
<br>

<%= link_to 'New Post', new_post_path %>
